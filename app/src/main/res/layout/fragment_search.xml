<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/motionLayout"
        app:layoutDescription="@xml/research_fragment_scene_01"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View
            android:id="@+id/collapsing_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/background_search_gradient"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/collapsed_background_guide"
            android:focusedByDefault="true"
            android:focusableInTouchMode="true"/>

    <TextView
            android:id="@+id/search_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:text="Search"
            android:layout_marginStart="16dp"
            android:textSize="18sp"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/sanchez"/>

    <View
            android:id="@+id/search_value_container"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_tv_title"
            android:background="@android:color/white"
            android:focusedByDefault="false"
            android:focusableInTouchMode="false"/>

    <View
            android:id="@+id/collapsed_background_guide"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_value_container"
            android:background="@android:color/white"
            android:visibility="invisible"
            android:layout_marginTop="16dp"/>

    <ImageView
            android:id="@+id/search_iv_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="@+id/search_value_container"
            app:layout_constraintTop_toTopOf="@+id/search_value_container"
            app:layout_constraintBottom_toBottomOf="@+id/search_value_container"
            android:src="@drawable/ic_search_black_24dp"
            android:padding="8dp"
            android:elevation="2dp"/>

    <EditText
            android:id="@+id/search_et_value"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@+id/search_value_container"
            app:layout_constraintTop_toTopOf="@+id/search_value_container"
            app:layout_constraintBottom_toBottomOf="@+id/search_value_container"
            app:layout_constraintEnd_toStartOf="@+id/search_iv_icon"
            android:elevation="2dp"
            android:background="@android:color/transparent"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/sanchez"/>

    <TextView
            android:id="@+id/search_tv_results_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/collapsing_background"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/search_status_quick_search"
            android:background="@color/line_break"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:fontFamily="@font/sanchez"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_rv_quick_search"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_tv_results_title"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/search_lottie_searching"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_tv_results_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_fileName="searching_lottie.json"
            android:visibility="gone"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/search_btn"
            style="@style/AppTheme.RoundedCornerMaterialButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="48dp"
            android:text="Search"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="48dp"
            android:paddingEnd="48dp"
            android:textColor="@android:color/white"
            app:cornerRadius="20dp"
            android:elevation="1dp"
            android:fontFamily="@font/sanchez"/>

</androidx.constraintlayout.motion.widget.MotionLayout>

