<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

    <TextView
            android:id="@+id/chips_card_title"
            style="@style/TrialContainerTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <View
            android:id="@+id/chips_title_divider"
            style="@style/TrialContainerTitleDivider"
            app:layout_constraintStart_toStartOf="@+id/chips_card_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chips_card_title"/>

    <com.google.android.material.chip.ChipGroup
            android:id="@+id/disease_chip_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/chips_card_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chips_title_divider"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/study_associated_btn"
            style="@style/PrimaryButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/disease_chip_group"
            android:layout_marginTop="16dp"
            android:text="@string/trial_detail_associated_disease_button"/>


</androidx.constraintlayout.widget.ConstraintLayout>
