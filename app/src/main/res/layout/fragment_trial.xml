<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
                style="@style/TrialCardView"
                android:focusableInTouchMode="true">

            <com.example.cansearch.trial.ui.StudySummaryCompoundView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
                style="@style/TrialCardView">

            <com.example.cansearch.trial.ui.TrialSummaryCompoundView
                    android:id="@+id/trial_summary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
                style="@style/TrialCardView">

            <com.example.cansearch.trial.ui.AssociatedDiseaseInfoCompoundView
                    android:id="@+id/trial_disease"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
                style="@style/TrialCardView">

            <com.example.cansearch.trial.ui.AssociatedDiseaseInfoCompoundView
                    android:id="@+id/trial_associated_genes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
                style="@style/TrialCardView"
                android:layout_marginBottom="16dp">

            <com.example.cansearch.trial.ui.EligibilityCompoundView
                    android:id="@+id/trial_eligibility"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>



