<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/trial_item_title"
            style="@style/TrialContainerTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="sans-serif-light"/>

    <TextView
            android:id="@+id/trial_item_value"
            style="@style/TrialContainerTitle"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/trial_item_title"
            android:ellipsize="end"
            android:textAlignment="viewEnd"
            android:textColor="#173048"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:maxLines="1"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"/>

    <View
            android:id="@+id/trial_item_divider"
            style="@style/TrialContainerTitleDivider"
            app:layout_constraintStart_toStartOf="@+id/trial_item_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trial_item_title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/line_break_secondary"
            android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
